<section class="py-10">
  <div
    class="relative max-w-7xl h-[100vh] lg:h-[75vh] mx-auto rounded lg:rounded-2xl overflow-hidden"
  >
    <!-- Background Image -->
    <div class="absolute inset-0 bg-black opacity-80"></div>
    <img
      src="https://media.designcafe.com/wp-content/uploads/2019/12/09102702/modern-living-room-design-with-tv-unit-designed-with-storage.jpg"
      alt="Living Room"
      class="w-full h-full object-cover"
    />

    <!-- Form Content -->
    <div class="absolute h-full w-full top-0">
      <div class="h-full w-full p-8 md:p-10 text-white">
        <div class="flex flex-col md:flex-row gap-5 md:gap-0">
          <div class="max-w-2xl space-y-4 md:space-y-6">
            <h5>CONTACT US</h5>
            <h2 class="text-2xl md:text-3xl font-bold text-[#98c0da]">
              Get in touch
            </h2>
            <div class="h-1 bg-[#bd6b25] w-[100px]"></div>
            <p class="text-gray-300">
              Get in touch with us to start transforming your space today.
              Whether you have questions or are ready to begin your project, we
              re here to help. Reach out, and let s make your vision a reality.
            </p>

            <div class="mt-5">
              <form action="/contact" method="POST" class="space-y-4">
                <!-- Full Name Field -->
                <div class="flex flex-col md:flex-row gap-5">
                  <input
                    type="text"
                    name="full_name"
                    placeholder="Your Full Name"
                    required
                    class="w-full p-3 bg-gray-400 bg-opacity-30 text-white"
                  />
                  <input
                    type="email"
                    name="email"
                    placeholder="Your Email Address"
                    required
                    class="w-full p-3 bg-gray-400 bg-opacity-30 text-white"
                  />
                </div>
                <input
                  type="text"
                  name="phone_number"
                  placeholder="Your Phone Number"
                  required
                  class="w-full p-3 bg-gray-400 bg-opacity-30 text-white"
                />
                <textarea
                  name="feedback"
                  placeholder="Your Feedback"
                  required
                  class="w-full p-3 bg-gray-400 bg-opacity-30 text-white"
                ></textarea>
                <div class="flex justify-center items-center">
                  <button
                    type="submit"
                    class="min-w-[150px] bg-white text-black py-2 px-4 rounded font-semibold"
                  >
                    SUBMIT
                  </button>
                </div>
              </form>
            </div>
          </div>

          <!-- right section -->
          <div
            class="w-full md:w-2/5 flex justify-center md:justify-end items-center"
          >
            <div class="text-center space-y-5">
              <div class="p-3 md:p-5 border border-gray-500 rounded-xl">
                <h5 class="font-semibold text-gray-400">Call Us!</h5>
                <h5>(+91) 8995672345</h5>
                <h5>(+91) 8234672397</h5>
              </div>

              <div class="p-3 md:p-5 border border-gray-500 rounded-xl">
                <h5 class="font-semibold text-gray-400">Email</h5>
                <h5>interiors.mydesign@gmail.com</h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
