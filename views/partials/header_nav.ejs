<header class="py-10">
  <div class="mx-auto max-w-7xl flex justify-between items-center px-4">
    <!-- Logo -->
    <h1 class="text-xl font-bold text-[#fe9901]">My Design Interiors</h1>

    <!-- Navigation (Hidden on mobile) -->
    <nav class="hidden md:flex space-x-10 items-center text-md">
      <a href="/" class="text-white hover:text-theme_color">Home</a>
      <a href="/" class="text-white hover:text-theme_color">About</a>
      <a href="/" class="text-white hover:text-theme_color">Services</a>
      <a href="/" class="text-white hover:text-theme_color">Gallery</a>
      <a href="contact" class="text-white hover:text-theme_color">
        <button class="px-5 py-2 bg-[#fe9901] hover:bg-[#eaa947] rounded-full">
          Contact us
        </button>
      </a>
    </nav>

    <!-- Mobile Toggle Button -->
    <button id="menu-toggle" class="md:hidden text-white text-2xl">
      <i class="fas fa-bars"></i>
    </button>
  </div>

  <!-- Sidebar (Hidden by default) -->
  <aside
    id="mobile-menu"
    class="fixed top-0 left-0 w-3/4 h-full bg-[#333] text-white transform -translate-x-full transition-transform duration-300 z-50"
  >
    <div class="p-5">
      <button id="close-menu" class="text-white text-2xl mb-5">
        <i class="fas fa-times"></i>
      </button>
      <nav class="space-y-4 text-lg">
        <a href="/" class="block hover:text-theme_color">Home</a>
        <a href="/" class="block hover:text-theme_color">About</a>
        <a href="/" class="block hover:text-theme_color">Services</a>
        <a href="/" class="block hover:text-theme_color">Gallery</a>
        <a href="contact" class="block">
          <button class="px-5 py-2 bg-[#fe9901] hover:bg-[#eaa947] rounded-full">
            Contact us
          </button>
        </a>
      </nav>
    </div>
  </aside>
</header>
